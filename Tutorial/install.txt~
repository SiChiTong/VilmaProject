sudo sh -c 'echo "deb http://packages.ros.org/ros/ubuntu precise main" > /etc/apt/sources.list.d/ros-latest.list' ;
 
wget http://packages.ros.org/ros.key -O - | echo Y |  sudo apt-key add - ;

sudo apt-get get update ;
echo Y | sudo apt-get install ros-hydro-desktop-full ;
sudo sh -c 'echo " source /opt/ros/hydro/setup.bash" > ~/.bashrc' ;
sudo apt-get update ; echo Y | sudo apt-get upgrade ;
sudo sh -c 'echo "deb http://packages.osrfoundation.org/gazebo/ubuntu precise main" > /etc/apt/sources.list.d/gazebo-latest.list' ;
wget http://packages.osrfoundation.org/gazebo.key -O - | echo Y |  sudo apt-key add - ;

sudo apt-get update ;
echo Y | sudo apt-get upgrade ;

echo Y | sudo apt-get install gazebo
